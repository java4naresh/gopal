	<servlet-class>com.naresh.gopal.MyFirstServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>FilterServlet</display-name>
		<servlet-name>FilterServlet</servlet-name>
		<servlet-class>com.naresh.gopal.FilterServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>myServlet</servlet-name>
	<url-pattern>/getMessage</url-pattern>
	</servlet-mapping>
